{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "product_name": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "ingredients": {
      "type": "string",
      "required": true
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "restaurant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::restaurant.restaurant",
      "inversedBy": "products"
    },
    "price": {
      "type": "decimal",
      "required": false,
      "min": 1
    },
    "base": {
      "type": "enumeration",
      "enum": [
        "tomato",
        "cream"
      ],
      "default": "tomato",
      "required": false
    },
    "vegetarian": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "dessert": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
